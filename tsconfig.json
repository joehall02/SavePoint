{
  "compilerOptions": {
    // === Project layout ===
    "rootDir": "./src", // Only look at backend source files
    "outDir": "./dist", // Compile output goes here

    // === Javascript target and module ===
    "target": "es2020", // Set JS target
    "module": "CommonJS", // Use Node's default module system
    "esModuleInterop": true, // Enable more convenient imports

    // === Type checking ===
    "strict": true, // Enable all strict type checking options
    "noUncheckedIndexedAccess": true, // Extra safety
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true, // Skip type checking for node_modules

    // === Node types ===
    "types": ["node"], // Include Node.js type definitions
    "forceConsistentCasingInFileNames": true // Ensures correct casing in imports
  },
  "include": ["src"], // Only compile backend code
  "exclude": ["node_modules", "client"] // Ignore frontend
}
