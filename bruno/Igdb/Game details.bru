meta {
  name: Game details
  type: http
  seq: 3
}

post {
  url: {{igdb_base_url}}/games/
  body: text
  auth: inherit
}

headers {
  Authorization: Bearer {{igdb_access_token}}
  Client-ID: {{igdb_client_id}}
}

body:text {
  fields name, storyline, summary, platforms.name, cover.image_id, videos.video_id, genres.name, artworks.image_id, release_dates.date; where id = 472;
}

settings {
  encodeUrl: true
  timeout: 0
}
