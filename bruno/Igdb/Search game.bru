meta {
  name: Search game
  type: http
  seq: 1
}

post {
  url: {{igdb_base_url}}/games/
  body: text
  auth: inherit
}

headers {
  Authorization: Bearer {{igdb_access_token}}
  Client-ID: {{igdb_client_id}}
}

body:json {
  search ${searchParam}; fields name, cover.image_id; limit 6;
}

body:text {
  search "halo 3"; fields name, cover.image_id; limit 6;
  where (platforms = [49]);
}

settings {
  encodeUrl: true
  timeout: 0
}
